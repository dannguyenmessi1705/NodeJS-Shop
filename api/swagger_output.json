            "example": "123456"
          },
          "re_password": {
            "type": "string",
            "example": "123456"
          }
        },
        "required": [
          "username",
          "email",
          "password",
          "re_password"
        ],
        "xml": {
          "name": "SignUp"
        }
      },
      "SignIn": {
        "type": "object",
