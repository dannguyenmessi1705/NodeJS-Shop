<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/addProduct.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <!-- Nếu editing = true => Edit, ngược lại là ADD -->
        <form class="product-form" action="/admin/<%if(editing){%>edit-product<%}else{%>add-product<%}%>" method="POST">
            <!-- TOKEN CSRF -->
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<%if(editing){%><%=item.name%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%if(editing){%><%=item.price%><%}%>">
            </div>
            <div class="form-control">
                <label for="url">URL</label>
                <input type="text" name="url" id="url" rows="5" value="<%if(editing){%><%=item.url%><%}%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description" rows="5"><%if(editing){%><%=item.description%><%}%></textarea>
            </div>
            <!-- UPDATE PRODUCT -->
            <%if(editing){%>
                <input type="hidden" value="<%=item._id%>" name="id">
            <%}%>
            <button type="submit" class="btn"><%if(editing){%>Update Product<%}else{%>Add Product<%}%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>