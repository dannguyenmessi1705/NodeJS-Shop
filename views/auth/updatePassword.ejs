<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <div class="d-flex align-items-center py-2">
            <!-- FLASH MESSAGE -->
            <% if(error) { %> 
                <div data-aos="fade-down" class="shake animated d-inline-block p-2 text-center mx-auto fw-bold text-danger border rounded border-danger bg-danger-subtle">
                    <%= error %>
                </div>
            <% } %>
        </div>

        <form class="login-form" action="/update-password" method="POST">
            <div class="form-control">
                <label for="password">New Password</label>
                <input type="password" name="password" id="password">
            </div>
            <!-- TOKEN CSRF -->
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <input type="hidden" name="passwordToken" value="<%=passwordToken%>">
            <input type="hidden" name="userId" value="<%=userId%>">
            <button class="btn" type="submit">Update New Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>