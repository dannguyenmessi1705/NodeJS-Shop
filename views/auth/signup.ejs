<%- include('../includes/head.ejs') %>
</head>
<body>
   <%- include('../includes/nav.ejs') %>
   <div class="d-flex align-items-center py-2">
        <!-- FLASH MESSAGE -->
        <% if(error) { %> 
            <div data-aos="fade-down" class="shake animated d-inline-block p-2 text-center mx-auto fw-bold text-danger border rounded border-danger bg-danger-subtle">
                <%= error %>
            </div>
        <% } %>
    </div>
    <section data-aos="zoom-in" class="py-3">
        <div class="container py-1">
            <div class="row mb-3 mb-lg-4">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h3 class="fw-bold">Welcome to Register</h3>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card">
                        <div class="card-body text-center d-flex flex-column align-items-center">
                            <div class="bs-icon-xl bs-icon-circle bs-icon-primary shadow bs-icon my-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"></path>
                                </svg>
                            </div>
                            <form method="post" action="/signup" data-bs-theme="light">
                                <div class="mb-3">
                                    <input class="form-control border-3 <%=errorType === 'username' ? 'border-danger' : ''%>" type="text" name="username" id="username" placeholder="Username" value="<%=oldInput.username%>">
                                </div>
                                <div class="mb-3">
                                    <input class="form-control border-3 <%=errorType === 'email' ? 'border-danger' : ''%>" type="email" name="email" id="email" placeholder="Email" value="<%=oldInput.email%>">
                                </div>
                                <div class="mb-3">
                                    <input class="form-control border-3 <%=errorType === 'password' ? 'border-danger' : ''%>" type="password" name="password" id="password" placeholder="Password" value="<%=oldInput.password%>">
                                </div>
                                <div class="mb-3">
                                    <input class="form-control border-3 <%=errorType === 're_password' ? 'border-danger' : ''%>" type="password" name="re_password" id="re_password" placeholder="Retype Password" value="<%=oldInput.re_password%>">
                                </div>
                                <!-- TOKEN CSRF -->
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <div class="mb-3">
                                    <button class="btn btn-primary shadow d-block w-100" type="submit">Sign Up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include('../includes/end.ejs') %>